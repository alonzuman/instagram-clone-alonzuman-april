<%= render  "shared/navbar", center: "Add post" %>
<div class="container">
  <div class="form-container">
    <%= simple_form_for(@post) do |f| %>
      <%= f.input :photo, as: :file %>
      <%= f.input :description %>
      <div class="form-actions">
        <%= f.button :submit, "Post", class:"primary-button" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>