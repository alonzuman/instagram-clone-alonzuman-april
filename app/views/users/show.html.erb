<%= render  "shared/navbar", left: '', center: @user.username, right: (link_to "", edit_user_registration_path, class:"fas fa-cog") %>

<div class="container">
  
  <%# User avatar %>

  <%# User header %>
  <div class="user-header">
    <% if @user.photo.attached? %>
      <%= cl_image_tag(@user.photo.key, class:"medium-round-avatar") %>
    <% end %>
    <%# Stats meter %>
    <%= render "shared/stats-meter", user: @user %>
  </div>


  <div class="posts-grid">
    <% @user.posts.each do |post| %>
      <div class="grid-photo-container">
        <%= cl_image_tag(post.photo.key, class:"grid-photo")%>
      </div>
    <% end %>
  </div>
  
</div>
<%= render "shared/footer" %>